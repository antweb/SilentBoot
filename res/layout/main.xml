<LinearLayout android:id="@+id/LinearLayout01" 
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent" 
	android:orientation="vertical"
	xmlns:android="http://schemas.android.com/apk/res/android">
			
		<CheckBox android:text="@string/labelEnable" 
			android:id="@+id/checkBoxEnable" 
			android:layout_height="wrap_content" 
			android:checked="false" 
			android:layout_gravity="center_horizontal" 
			android:layout_margin="10dip" 
			android:layout_width="fill_parent" android:paddingLeft="50dip">
		</CheckBox>
		
		<CheckBox android:text="@string/labelAirplaneToggle" 
			android:id="@+id/checkBoxAirplaneToggle" 
			android:layout_height="wrap_content" 
			android:checked="false" 
			android:layout_gravity="center_horizontal" 
			android:layout_margin="10dip" 
			android:layout_width="fill_parent" android:paddingLeft="50dip">
		</CheckBox>
	
	
		<TextView android:id="@+id/textStatus" 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content" 
			android:gravity="center"
			android:layout_margin="10dip" >
		</TextView>		
		
		<TextView android:id="@+id/textAirplaneStatus" 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content" 
			android:gravity="center"
			android:layout_margin="10dip" >
		</TextView>


</LinearLayout>


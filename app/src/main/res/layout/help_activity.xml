<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.MaterialToolbar
        style="@style/Widget.MaterialComponents.Toolbar.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar">
    </com.google.android.material.appbar.MaterialToolbar>

    <ScrollView android:id="@+id/sv_help_outer"
        style="@style/help_outer" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/helpHowSectionHeader" />
            <TextView
                style="@style/help_text"
                android:text="@string/helpHowSectionText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/helpNotificationSectionHeader" />
            <TextView
                style="@style/help_text"
                android:text="@string/helpNotificationSectionText" />

        </LinearLayout>

    </ScrollView>
</LinearLayout>
